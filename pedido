import java.util.Date;

public class Pedido {
    private int id;
    private int clienteId;
    private Date data;
    private String status;

    public Pedido(int id, int clienteId, Date data, String status) {
        this.id = id;
        this.clienteId = clienteId;
        this.data = data;
        this.status = status;
    }

    // Getters and Setters
    public int getId() {
        return id;
    }

    public void setId(int id) {
        this.id = id;
    }

    public int getClienteId() {
        return clienteId;
    }

    public void setClienteId(int clienteId) {
        this.clienteId = clienteId;
    }

    public Date getData() {
        return data;
    }

    public void setData(Date data) {
        this.data = data;
    }

    public String getStatus() {
        return status;
    }

    public void setStatus(String status) {
        this.status = status;
    }

    // Métodos adicionais
    public void atualizarStatus() {
        // Implementação para atualizar o status do pedido
    }

    public double calcularTotal() {
        // Implementação fictícia para calcular o total do pedido (futuramente interagir com banco)
        return 0.0;
    }
}
